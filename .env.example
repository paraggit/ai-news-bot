# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_or_chat_id

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# DeepSeek Configuration (optional)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Summarizer Selection (openai, deepseek, or local)
SUMMARIZER_TYPE=openai

# Local Model Configuration (when using local summarizer)
LOCAL_MODEL_NAME=facebook/bart-large-cnn
LOCAL_MODEL_DEVICE=auto
LOCAL_MODEL_PRECISION=float16
LOCAL_MODEL_MAX_LENGTH=1024
LOCAL_MODEL_BATCH_SIZE=1
LOCAL_MODEL_CACHE_DIR=./models
LOCAL_MODEL_USE_QUANTIZATION=false
LOCAL_MODEL_LOAD_IN_8BIT=false
LOCAL_MODEL_LOAD_IN_4BIT=false

# Raspberry Pi Specific Settings
ENABLE_PERFORMANCE_MONITORING=true
MEMORY_THRESHOLD_PERCENT=85
AUTO_OPTIMIZE_FOR_PI=true
ENABLE_MODEL_CACHING=true

# Network Configuration
SSL_VERIFY=true
HTTP_TIMEOUT=30
MAX_RETRIES=3
USER_AGENT=AI-News-Aggregator-Bot/1.0

# Alternative lightweight models for limited memory:
# LOCAL_MODEL_NAME=sshleifer/distilbart-cnn-6-6    # Ultra-light (400MB)
# LOCAL_MODEL_NAME=sshleifer/distilbart-cnn-12-6   # Light (800MB)
# LOCAL_MODEL_NAME=google/pegasus-xsum             # Medium (600MB)
# LOCAL_MODEL_NAME=facebook/bart-large-cnn         # Standard (1.6GB)

# News Fetching Configuration
FETCH_INTERVAL_MINUTES=30
MAX_ARTICLES_PER_RUN=10

# Database Configuration
DATABASE_PATH=data/news_aggregator.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ArXiv Configuration
ARXIV_MAX_RESULTS=5
ARXIV_CATEGORIES=cs.AI,cs.LG,cs.CL,cs.CV

# RSS Feed Update Intervals (in minutes)
RSS_FEED_INTERVAL=15